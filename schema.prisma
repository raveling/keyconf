// This file is automatically generated by Keystone, do not modify it manually.
// Modify your Keystone config when you want to change this.

datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Post {
  id                      String    @id @default(cuid())
  title                   String    @default("")
  summary                 String    @default("")
  featuredImage_filesize  Int?
  featuredImage_extension String?
  featuredImage_width     Int?
  featuredImage_height    Int?
  featuredImage_mode      String?
  featuredImage_id        String?
  status                  String?   @default("draft")
  content                 String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate             DateTime?
  relatedPosts            Post[]    @relation("Post_relatedPosts")
  from_Post_relatedPosts  Post[]    @relation("Post_relatedPosts")
}

model Page {
  id                      String  @id @default(cuid())
  title                   String  @default("")
  summary                 String  @default("")
  includeHeader           Boolean @default(false)
  featuredImage_filesize  Int?
  featuredImage_extension String?
  featuredImage_width     Int?
  featuredImage_height    Int?
  featuredImage_mode      String?
  featuredImage_id        String?
  status                  String? @default("draft")
  content                 String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}